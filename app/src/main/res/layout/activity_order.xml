<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orderBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/details_frame_Layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:weightSum="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/arrow_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="25dp"
                android:contentDescription="@string/app_name"

                android:src="@drawable/ic_baseline_arrow_back_24" />

            <TextView
                android:id="@+id/toolbar_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="25dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/preferences"
                android:textAlignment="center"
                android:textSize="@dimen/_15sdp" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:contentDescription="@string/app_name"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/header" />

            <ImageView
                android:id="@+id/itemImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:contentDescription="@string/app_name"
                android:src="@drawable/macciato" />

        </RelativeLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/addToCartButton"
            style="@style/button_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_20sdp"
            android:text="@string/add_to_cart"
            app:flow_firstVerticalBias="0."
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view11"
            app:layout_constraintVertical_bias="0.68" />


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.93" />

        <TextView
            android:id="@+id/itemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="20dp"
            android:text="@string/macciato"
            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintTop_toBottomOf="@+id/relativeLayout" />


        <TextView
            android:id="@+id/Additions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:text="@string/additions"
            app:layout_constraintBottom_toTopOf="@+id/view11"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view9" />

        <View
            android:id="@+id/view8"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="90dp"

            android:background="#8C746A"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout" />

        <View
            android:id="@+id/view9"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="73dp"

            android:background="#8C746A"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view10" />

        <View
            android:id="@+id/view10"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="70dp"

            android:background="#8C746A"
            app:layout_constraintTop_toBottomOf="@+id/view8" />

        <View
            android:id="@+id/view11"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="71dp"

            android:background="#8C746A"
            app:layout_constraintTop_toBottomOf="@+id/view9" />

        <ImageView

            android:id="@+id/imgSmallSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="33dp"
            android:layout_marginBottom="16dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_mini_cub"
            app:layout_constraintBottom_toTopOf="@+id/view10"
            app:layout_constraintEnd_toStartOf="@+id/imgMediumSize"
            android:tintMode="src_in"
            app:tint="@color/black"  />

        <ImageView
            android:id="@+id/imgMediumSize"
            android:layout_width="24dp"

            android:layout_height="36dp"
            android:layout_marginEnd="30dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/size_medium"
            app:layout_constraintBottom_toBottomOf="@+id/imgSmallSize"
            app:layout_constraintEnd_toStartOf="@+id/imgLargeSize" />

        <ImageView
            android:id="@+id/imgLargeSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="85dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/size_medium"
            app:layout_constraintBottom_toBottomOf="@+id/imgMediumSize"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/sizeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="21dp"
            android:text="@string/size"
            app:layout_constraintBottom_toTopOf="@+id/view10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view8" />

        <TextView
            android:id="@+id/itemPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:text="@string/price"
            app:layout_constraintBottom_toTopOf="@+id/view8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/itemName" />

        <TextView
            android:id="@+id/sugarText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:text="@string/sugar"
            app:layout_constraintBottom_toTopOf="@+id/view9"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view10" />

        <ImageView
            android:id="@+id/noSugar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="77dp"
            android:layout_marginBottom="20dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_no_sugar"
            app:layout_constraintBottom_toTopOf="@+id/view9"
            app:layout_constraintEnd_toStartOf="@+id/oneSugar"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toEndOf="@+id/sugarText" />

        <ImageView
            android:id="@+id/oneSugar"
            android:layout_width="@dimen/_10sdp"

            android:layout_height="@dimen/_10sdp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_one_sugar"
            app:layout_constraintBottom_toBottomOf="@+id/noSugar"
            app:layout_constraintEnd_toStartOf="@+id/twoSugar"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/noSugar" />

        <ImageView
            android:id="@+id/twoSugar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_two_sugar"
            app:layout_constraintBottom_toBottomOf="@+id/oneSugar"
            app:layout_constraintEnd_toStartOf="@+id/threeSugar"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/oneSugar" />

        <ImageView
            android:id="@+id/threeSugar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="34dp"

            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_three_sugar"
            app:layout_constraintBottom_toBottomOf="@+id/twoSugar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/twoSugar" />

        <ImageView
            android:id="@+id/addCream"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"

            android:layout_marginEnd="30dp"
            android:layout_marginBottom="25dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_cream"
            app:layout_constraintBottom_toTopOf="@+id/view11"
            app:layout_constraintEnd_toStartOf="@+id/addDrawings"
            app:layout_constraintStart_toEndOf="@+id/Additions" />

        <ImageView
            android:id="@+id/addDrawings"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="140dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/vanilla"
            app:layout_constraintBottom_toBottomOf="@+id/addCream"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/totalText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="50dp"
            android:text="@string/total"
            app:layout_constraintBottom_toTopOf="@+id/addToCartButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view11" />

        <TextView
            android:id="@+id/totalPriceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="27dp"
            android:text="@string/price_egp"
            app:layout_constraintBottom_toBottomOf="@+id/totalText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view11" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/removeButton"
            style="@style/remove_button_style"
            android:layout_width="50dp"
            android:layout_height="48dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="30dp"
            android:text="@string/dash"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/view8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/addButton"
            style="@style/add_button_style"
            android:layout_width="50dp"
            android:layout_height="48dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="30dp"
            android:text="@string/plus"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/view8"
            app:layout_constraintEnd_toStartOf="@+id/amountText"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout" />

        <TextView
            android:id="@+id/amountText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="30dp"
            android:text="@string/zero"
            android:textSize="@dimen/_20sdp"
            app:layout_constraintBottom_toTopOf="@+id/view8"
            app:layout_constraintEnd_toStartOf="@+id/removeButton"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>